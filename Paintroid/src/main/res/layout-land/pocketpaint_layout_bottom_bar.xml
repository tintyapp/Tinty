<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?android:attr/colorBackground"
    tools:showIn="@layout/activity_pocketpaint_main">

    <TableRow
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:id="@+id/pocketpaint_tools_brush"
            style="@style/PocketPaintToolSelectionButton"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/PocketPaintToolSelectionButtonImageView"
                android:contentDescription="@string/button_brush"
                app:srcCompat="@drawable/ic_pocketpaint_tool_brush" />

            <TextView
                style="@style/PocketPaintToolSelectionButtonTextView"
                android:text="@string/button_brush" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pocketpaint_tools_hand"
            style="@style/PocketPaintToolSelectionButton"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/PocketPaintToolSelectionButtonImageView"
                android:contentDescription="@string/button_hand"
                app:srcCompat="@drawable/ic_pocketpaint_tool_hand" />

            <TextView
                style="@style/PocketPaintToolSelectionButtonTextView"
                android:text="@string/button_hand" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pocketpaint_tools_eraser"
            style="@style/PocketPaintToolSelectionButton"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/PocketPaintToolSelectionButtonImageView"
                android:contentDescription="@string/button_eraser"
                app:srcCompat="@drawable/ic_pocketpaint_tool_eraser" />

            <TextView
                style="@style/PocketPaintToolSelectionButtonTextView"
                android:text="@string/button_eraser" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pocketpaint_tools_line"
            style="@style/PocketPaintToolSelectionButton"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/PocketPaintToolSelectionButtonImageView"
                android:contentDescription="@string/button_line"
                app:srcCompat="@drawable/ic_pocketpaint_tool_line" />

            <TextView
                style="@style/PocketPaintToolSelectionButtonTextView"
                android:text="@string/button_line" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pocketpaint_tools_rectangle"
            style="@style/PocketPaintToolSelectionButton"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/PocketPaintToolSelectionButtonImageView"
                android:contentDescription="@string/button_shape"
                app:srcCompat="@drawable/ic_pocketpaint_tool_rectangle" />

            <TextView
                style="@style/PocketPaintToolSelectionButtonTextView"
                android:text="@string/button_shape" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pocketpaint_tools_fill"
            style="@style/PocketPaintToolSelectionButton"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/PocketPaintToolSelectionButtonImageView"
                android:contentDescription="@string/button_fill"
                app:srcCompat="@drawable/ic_pocketpaint_tool_fill" />

            <TextView
                style="@style/PocketPaintToolSelectionButtonTextView"
                android:text="@string/button_fill" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:id="@+id/pocketpaint_tools_pipette"
            style="@style/PocketPaintToolSelectionButton"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/PocketPaintToolSelectionButtonImageView"
                android:contentDescription="@string/button_pipette"
                app:srcCompat="@drawable/ic_pocketpaint_tool_pipette" />

            <TextView
                style="@style/PocketPaintToolSelectionButtonTextView"
                android:text="@string/button_pipette" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pocketpaint_tools_cursor"
            style="@style/PocketPaintToolSelectionButton"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/PocketPaintToolSelectionButtonImageView"
                android:contentDescription="@string/button_cursor"
                app:srcCompat="@drawable/ic_pocketpaint_tool_cursor" />

            <TextView
                style="@style/PocketPaintToolSelectionButtonTextView"
                android:text="@string/button_cursor" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pocketpaint_tools_text"
            style="@style/PocketPaintToolSelectionButton"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/PocketPaintToolSelectionButtonImageView"
                android:contentDescription="@string/button_text"
                app:srcCompat="@drawable/ic_pocketpaint_tool_text" />

            <TextView
                style="@style/PocketPaintToolSelectionButtonTextView"
                android:text="@string/button_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pocketpaint_tools_stamp"
            style="@style/PocketPaintToolSelectionButton"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/PocketPaintToolSelectionButtonImageView"
                android:contentDescription="@string/button_stamp"
                app:srcCompat="@drawable/ic_pocketpaint_tool_stamp" />

            <TextView
                style="@style/PocketPaintToolSelectionButtonTextView"
                android:text="@string/button_stamp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pocketpaint_tools_transform"
            style="@style/PocketPaintToolSelectionButton"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/PocketPaintToolSelectionButtonImageView"
                android:contentDescription="@string/button_transform"
                app:srcCompat="@drawable/ic_pocketpaint_tool_transform" />

            <TextView
                style="@style/PocketPaintToolSelectionButtonTextView"
                android:text="@string/button_transform" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pocketpaint_tools_import"
            style="@style/PocketPaintToolSelectionButton"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/PocketPaintToolSelectionButtonImageView"
                android:contentDescription="@string/button_import_image"
                app:srcCompat="@drawable/ic_pocketpaint_tool_import" />

            <TextView
                style="@style/PocketPaintToolSelectionButtonTextView"
                android:text="@string/button_import_image" />
        </LinearLayout>
    </TableRow>
</TableLayout>
